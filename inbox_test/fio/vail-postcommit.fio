# $BS/$QD(optional, if not used, no affect by external input), $BS to accept external block size input, $QD accept iodepth input.
# You should specify bs=*, iodepth=*, runtime=* below, the value will be replaced if there're external input. 
# If no item specified, not value will be added, for ex, if no runtime=* specified, no external input of time will be added, 
# so that we can control here as well if some param needed, for example, we do not want to specify runtime for some of cases
[global]
ioengine=libaio
direct=1
buffered=0
continue_on_error=none
filename=/dev/nvme0n1

# pure read/write test at range 0-20%
[seqwr_128k_iodepth_256]
bs=128k
iodepth=256
rw=write
offset=0
size=20%
do_verify=0
verify=pattern
verify_dump=1
verify_fatal=1
verify_backlog=1
verify_pattern=0x55aa55aa
numjobs=1
thread
stonewall

[seqrd_$BS_iodepth_$QD]
bs=$BS
iodepth=$QD
rw=read
offset=$offset
size=20%
do_verify=1
verify=pattern
verify_dump=1
verify_fatal=1
verify_backlog=1
verify_pattern=0x55aa55aa
numjobs=2
thread
time_based
runtime=$TIME
stonewall

[randrd_$BS_iodepth_$QD]
bs=$BS
iodepth=$QD
rw=randread
offset=$offset
size=20%
do_verify=1
verify=pattern
verify_dump=1
verify_fatal=1
verify_backlog=1
verify_pattern=0x55aa55aa
numjobs=2
thread
time_based
runtime=$TIME
stonewall

# mixed read/write test, no zero read involved, thus no mixed for the same range(write cache enabled, so data will not write to flash immediately)
