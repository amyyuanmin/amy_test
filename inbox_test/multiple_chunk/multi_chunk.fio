#do not modify the section name
[global]
ioengine=libaio
direct=1
buffered=0
continue_on_error=none
filename=/dev/nvme0n1

[write_basic]
iodepth=256
bs=${BS}
rw=write
offset=${OFFSET}
size=${SIZE}
do_verify=0
verify=pattern
verify_dump=1
verify_fatal=1
verify_backlog=1
verify_pattern=0x55aa55aa
numjobs=1
thread
stonewall

[read_basic]
iodepth=256
bs=${BS}
rw=read
offset=${OFFSET}
size=${SIZE}
do_verify=1
verify=pattern
verify_dump=1
verify_fatal=1
verify_backlog=1
verify_pattern=0x55aa55aa
numjobs=1
thread

#below for mixed RW scenario, need to be split to two and specified by 2 sections, if merge in one, only the last job with name running
[write_stress]
iodepth=512
bs=${BS}
rw=write
offset=${OFFSET}
size=${SIZE}
do_verify=0
verify=pattern
verify_dump=1
verify_fatal=1
verify_backlog=1
verify_pattern=0x55aa55aa
numjobs=1
thread

[read_stress]
iodepth=512
bs=${BS}
rw=read
offset=0
size=${SIZE}
do_verify=1
verify=pattern
verify_dump=1
verify_fatal=1
verify_backlog=1
verify_pattern=0x55aa55aa
numjobs=1
thread