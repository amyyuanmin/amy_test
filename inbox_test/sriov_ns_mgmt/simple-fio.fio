# $BS/$QD(optional, if not used, no affect by external input), $BS to accept external block size input, $QD accept iodepth input.
# You should specify bs=*, iodepth=*, runtime=* below, the value will be replaced if there're external input. 
# If no item specified, not value will be added, for ex, if no runtime=* specified, no external input of time will be added, 
# so that we can control here as well if some param needed, for example, we do not want to specify runtime for some of cases
[global]
ioengine=libaio
direct=1
buffered=0
size=${SIZE}
continue_on_error=none

[seqwr_32k_iodepth_16]
bs=32k
iodepth=16
rw=write
offset=0
do_verify=0
verify=pattern
verify_dump=1
verify_fatal=1
verify_backlog=1
verify_pattern=0x55aa55aa
numjobs=1
thread
stonewall

[seqrd_32k_iodepth_16]
bs=32k
iodepth=${QD}
rw=read
offset=0
time_based
runtime=60
numjobs=2
thread
do_verify=1
verify=pattern
verify_dump=1
verify_fatal=1
verify_backlog=1
verify_pattern=0x55aa55aa
stonewall

[randrd_32k_iodepth_256]
bs=32k
iodepth=256
rw=randread
offset=0
time_based
runtime=30
numjobs=2
thread
do_verify=1
verify=pattern
verify_dump=1
verify_fatal=1
verify_backlog=1
verify_pattern=0x55aa55aa
stonewall

#below need to be split to two and specified by 2 sections, if merge in one, only the last job with name running
[write_50_to_100]
bs=32k
iodepth=1
rw=write
offset=${SIZE}
do_verify=0
verify=pattern
verify_dump=1
verify_fatal=1
verify_backlog=1
verify_pattern=0x55aa55aa
numjobs=1
thread

[read_0_to_50]
bs=32k
iodepth=1
rw=read
offset=0
do_verify=1
verify=pattern
verify_dump=1
verify_fatal=1
verify_backlog=1
verify_pattern=0x55aa55aa
numjobs=1
thread